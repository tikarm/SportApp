<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">#616161</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>

        <item name="toolbarStyle">@style/CustomToolBarStyle</item>
        <item name="android:actionMenuTextColor">@android:color/white</item>


    </style>

    <style name="AppThemeBlue" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorBluePrimary</item>
        <item name="colorPrimaryDark">@color/colorBluePrimaryDark</item>
        <item name="colorAccent">@color/colorBluePrimary</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#616161</item>
        <item name="colorControlHighlight">@color/colorBluePrimary</item>

        <item name="toolbarStyle">@style/CustomToolBarStyle</item>

    </style>

    <style name="AppThemeGreen" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorGreenPrimary</item>
        <item name="colorPrimaryDark">@color/colorGreenPrimaryDark</item>
        <item name="colorAccent">@color/colorGreenPrimary</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#616161</item>
        <item name="colorControlHighlight">@color/colorGreenPrimary</item>

        <item name="toolbarStyle">@style/CustomToolBarStyle</item>

    </style>

    <style name="AppThemeViolet" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="colorPrimary">@color/colorVioletPrimary</item>
        <item name="colorPrimaryDark">@color/colorVioletPrimaryDark</item>
        <item name="colorAccent">@color/colorVioletPrimary</item>

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#616161</item>
        <item name="colorControlHighlight">@color/colorVioletPrimary</item>

        <item name="toolbarStyle">@style/CustomToolBarStyle</item>

    </style>



    <style name="btn_style" parent="TextAppearance.AppCompat">
        <item name="android:clickable">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_rounded_corners_layout</item>
    </style>

    <style name="btn_launch_style" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/launch_button_layout_height</item>
        <item name="android:background">@drawable/bg_gradient_layout_button</item>
        <item name="android:text">@string/button</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="collapsing_toolbar_expanded" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <!-- ToolBar -->
    <style name="CustomToolBarStyle" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

</resources>
